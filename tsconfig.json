{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "lib",
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "skipLibCheck": true,
    "removeComments": true,
    "allowJs": true,
    "declaration": true,
    "importsNotUsedAsValues": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "components/types"
    ],
    "types": [
      "index"
    ]
  },
  "include": [
    "components/**/*.d.ts",
    "components/**/*.ts",
    "components/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib",
  ]
}