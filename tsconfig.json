{
  "compilerOptions": {
    "outDir": "lib",
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "skipLibCheck": true,
    "removeComments": true,
    "allowJs": true,
    "isolatedModules": false,
    "declaration": true,
    "importsNotUsedAsValues": "preserve",
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "include": [
    "components/**/*.d.ts",
    "components/**/*.ts",
    "components/*.ts",
    "designer/**/*.ts",
    "designer/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}